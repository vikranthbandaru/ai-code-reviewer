{
  "name": "ai-code-reviewer",
  "version": "1.0.0",
  "private": true,
  "description": "Production-grade AI-powered code reviewer for GitHub Pull Requests",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run build:core && npm run build:webhook && npm run build:worker",
    "build:core": "cd packages/core && npm run build --if-present",
    "build:webhook": "cd apps/webhook-server && npm run build --if-present",
    "build:worker": "cd apps/reviewer-worker && npm run build --if-present",
    "dev:webhook": "cd apps/webhook-server && npx tsx src/index.ts",
    "dev:smee": "npx smee -u https://smee.io/Mb3vPxMca3kTvbl -t http://localhost:3000/webhook",
    "test": "echo \"No tests configured yet\"",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern node_modules --ignore-pattern dist",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --ignore-pattern node_modules --ignore-pattern dist",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\" --ignore-path .gitignore",
    "typecheck": "tsc --noEmit -p tsconfig.base.json",
    "clean": "rimraf node_modules dist"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "smee-client": "^5.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  }
}